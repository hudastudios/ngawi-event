{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/apps/api/src/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/dist/$1"
        }
    ],
    "builds": [
        {
            "src": "apps/api/src/index.ts",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build"
        }
    ]
}