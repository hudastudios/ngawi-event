{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/apps/api/src/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/dist/$1"
        }
    ],
    "functions": {
        "apps/api/src/index.ts": {
            "includeFiles": "apps/api/**"
        }
    }
}